{% extends './base.njk' %}
{% block content %}
<header>
  <div class="wrapper">
    {%- if alerts.covid.enabled and alerts.covid.message %}
    <div class="inline-flex items-center mt-6 text-sm rounded-lg p-4 border-dashed border border-off-dark border-opacity-50">
      <div class="mr-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      </div>
      <div>{% markdown alerts.covid.message %}</div>
    </div>
    {%- endif %}
  </div>
</header>
<main class="flex-grow">
  <div class="wrapper">
  <h4>{{ title }}</h4>
  {{ content | safe }}
  </div>
</main>
{% endblock %}
